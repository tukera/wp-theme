{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "appearanceTools": true,
        "color": {
            "defaultPalette": false,
            "palette": [
                {
                    "name": "HELI Blue",
                    "slug": "hl-brand-primary",
                    "color": "#15244A"
                },
                {
                    "name": "HELI Green",
                    "slug": "hl-brand-secondary",
                    "color": "#57B94A"
                },
                {
                    "name": "Black",
                    "slug": "hl-black",
                    "color": "#000000"
                },
                {
                    "name": "Dark Gray",
                    "slug": "hl-dark-gray",
                    "color": "rgb(152,152,152)"
                },
                {
                    "name": "Light Gray",
                    "slug": "hl-light-gray",
                    "color": "#f0f0f0"
                },
                {
                    "name": "White",
                    "slug": "hl-white",
                    "color": "#ffffff"
                },
                {
                    "name": "Red",
                    "slug": "hl-red",
                    "color": "#ff0000"
                },
                {
                    "name": "Yellow",
                    "slug": "hl-yellow",
                    "color": "#ffff00"
                }
            ],
            "link": true,
            "custom": true
        },
        "border": {
            "radius": false,
            "color": false,
            "style": false,
            "width": false
        },
        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "Lato, sans-serif",
                    "slug": "hl-lato",
                    "name": "HELI Font"
                }
            ],
            "fontSizes": [
                {
                    "name": "Small",
                    "fluid": {
                        "min": "0.875rem",
                        "max": "1rem"
                    },
                    "size": "1rem",
                    "slug": "small"
                },
                {
                    "name": "Medium",
                    "fluid": {
                        "min": "1rem",
                        "max": "1.125rem"
                    },
                    "size": "1rem",
                    "slug": "medium"
                },
                {
                    "name": "Large",
                    "fluid": {
                        "min": "1.75rem",
                        "max": "1.875rem"
                    },
                    "size": "1.875rem",
                    "slug": "large"
                },
                {
                    "name": "Extra Large",
                    "fluid": {
                        "min": "1.875rem",
                        "max": "2.25rem"
                    },
                    "size": "2.25rem",
                    "slug": "x-large"
                }
            ],
            "lineHeight": true,
            "dropCap": true,
            "fontWeight": true,
            "fontStyle": true,
            "textTransform": true,
            "letterSpacing": true,
            "textDecoration": true
        },
        "layout": {
            "contentSize": "800px",
            "wideSize": "1100px"
        },
        "spacing": {
            "margin": true,
            "padding": true,
            "units": [
                "px",
                "rem",
                "vh",
                "vw",
                "%"
            ],
            "blockGap": true
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--hl-white)",
            "text": "var(--wp--preset--color--hl-black)"
        },
        "border": {
            "radius": "0px"
        },
        "elements": {
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--hl-brand-primary)"
                },
                ":hover": {
                    "color": {
                        "text": "var(--wp--preset--color--hl-brand-secondary)"
                    }
                }
            }
        },
        "blocks": {
            "core/button": {
                "color": {
                    "background": "var(--wp--preset--color--hl-brand-primary)",
                    "text": "var(--wp--preset--color--hl-white)"
                },
                "border": {
                    "radius": "0px"
                }
            }
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--hl-lato)",
            "fontSize": "var(--wp--preset--font-size--normal)",
            "fontStyle": "normal",
            "fontWeight": "normal",
            "lineHeight": "1.7",
            "textDecoration": "none",
            "textTransform": "none"
        },
        "spacing": {
            "margin": {
                "top": "0px",
                "bottom": "0px",
                "left": "0px",
                "right": "0px"
            },
            "padding": {
                "top": "0px",
                "bottom": "0px",
                "left": "0px",
                "right": "0px"
            },
            "blockGap": "4rem"
        }
    }
}